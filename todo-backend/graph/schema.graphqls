# GraphQL schema
#
# https://gqlgen.com/getting-started/

type PageInfo {
  startCursor: ID!
  endCursor: ID!
  hasNextPage: Boolean
}

type Todo {
  id: ID!
  title: String!
  completed: Boolean!
}

type TodoConnection {
  edges: [TodoEdge!]!
  pageInfo: PageInfo!
  totalCount: Int
}

type TodoEdge {
  cursor: ID!
  node: Todo!
}

type Query {
  todo(id: ID!): Todo
  todos(first: Int = 20, after: ID): TodoConnection!
}

input NewTodo {
  title: String!
}

input UpdatedTodo {
  title: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  updateTodo(id: ID!, input: UpdatedTodo!): Todo!
  deleteTodo(id: ID!): Todo!
}
